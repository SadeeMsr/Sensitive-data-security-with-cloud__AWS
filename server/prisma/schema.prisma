// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./cloud.db"
}

model User {
  id Int @id @default(autoincrement())
  user_type    String
  name         String
  email        String  @unique
  password     String
  EncryptedSymmetricKey String? @unique

  logbooks Logbook[]
}


model Logbook {
  form_id              Int      @id @default(autoincrement())
  employeeId           Int
  date                 DateTime
  patient_name         String
  diagnosis_details    String?
  procedures           String?
  follow_up            String?
  history              String?
  updates              String?
  personal_reflections String?

  user User @relation(fields: [employeeId], references: [id])
}
